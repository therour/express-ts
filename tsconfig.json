{
  "compilerOptions": {
    "types": ["node", "jest"],
    "target": "ESNext",
    "module": "commonjs",
    "outDir": "dist",
    "strict": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "paths": {
      "~/*": ["src/*"]
    },
    "baseUrl": "./"
  },
  "include": ["src", "tests", ".sequelizerc", "jest.config.ts"]
}